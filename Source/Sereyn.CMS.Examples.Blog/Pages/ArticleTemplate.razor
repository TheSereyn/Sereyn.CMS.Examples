@page "/Article/{Article}"
@page "/Article/{Category}/{Article}"
@page "/Article/{Category}/{SubCategory}/{Article}"

@if (_content != null)
{
    <main class="container">
        <article>
            <header>
                <h2>@_content.Configuration["Title"]</h2>
                <p class="text-muted">@_articleMetadata.Created.ToString("MMMM d, yyyy")</p>
            </header>

            <img src="@_content.Configuration["Image"]" alt="Alternate Text" />

            @ContentHtml()

        </article>
    </main>
}

